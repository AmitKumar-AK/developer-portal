{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "module": "esnext",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    // "rootDirs": [],                              /* List of root folders whose combined content represents the structure of the project at runtime. */
    "typeRoots": [
      "./types",
      "src/common/types",
      "./node_modules/@types"
    ] /* List of folders to include type definitions from. */,
    "moduleResolution": "node"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../../packages/ui/components/common/DynamicTag.tsx",
    "../../packages/ui/common/global-state.ts",
    "../../packages/ui/components/common/ConditionalWrapper.tsx"
  ],
  "exclude": ["node_modules", "types"]
}
